<view class="stepBox" style="position:absolute; top:200rpx; width:750rpx; text-align:center;">
		<!-- <image src="/img/step1-active.png" style="width:79rpx; height:44rpx;" /> -->
		<view class="step">
				<view class="normal"></view>
				<view class="steptext">Step1</view>
		</view>
		<view class="step" style="margin:0 16rpx;">
				<view class="active"></view>
				<view class="steptext">Step2</view>
		</view>
		<view class="step">
				<view class="normal"></view>
				<view class="steptext">Step3</view>
		</view>
</view>
<swiper class="swiper" next-margin="120rpx" previous-margin="120rpx" current="{{currentItemId}}" bindchange="swiperChange" indicator-dots="{{false}}" indicator-active-color="#0C6D4A" circular>
		<block wx:for="{{ poems }}" wx:for-item="item" wx:for-index="index" wx:key="index">
				<swiper-item item-id="{{index}}" data-item-id="{{index}}" bindtap='clickChange'>
						<view class='row' style="">
								<view class="title">{{item.name}}</view>
								<view class='col {{currentItemId == index ? "selected" : ""}}'>
										<image src="{{item.pictureUrl}}"></image>
								</view>
						</view>
				</swiper-item>
		</block>
</swiper>
<view class="btnPoemStory">
		<view class="g-buy_status" bindtap="buyPoemStory">
				{{work_bgs[currentItemId].used == 0 ? '已购买' : '购买'}}
		</view>
		<view class="g-buy_status" bindtap="showPoemStory">诗歌故事</view>
		<!-- <image src="/img/poemstory.png" style="width:144rpx; height:61rpx;" /> -->
</view>
<view style="position:absolute; bottom:100rpx; width:100%; text-align:center; color:#ffffff;">
		Step2：请选择诗歌
</view>
<!-- 诗歌故事 -->
<view wx:if="{{ ifShowPoemStory }}" class="bg_black" style="z-index:101;" bindtap="hideCert"></view>
<view wx:if="{{ ifShowPoemStory }}" style="z-index:102; position:absolute; width:628rpx; height:670rpx; background-color:#ffffff; top:300rpx; left:61rpx; text-align:center; border-radius:50rpx;">
		<view style="display:flex; align-items:flex-end; background-color:#FFC836; font-size:28rpx; padding:50rpx; border-top-left-radius:50rpx; border-top-right-radius:50rpx;">
				<view>{{poems[currentItemId].storyTitle}}</view>
				<view style="font-size:24rpx; margin-left:auto; margin-right:10rpx;">
						{{poems[currentItemId].storyAuther}}
				</view>
		</view>
		<view style="font-size:22rpx; padding:40rpx 60rpx; text-align:justify; line-height:40rpx; height:370rpx; overflow:hidden;">
				{{poems[currentItemId].storyContent}}
		</view>
		<view>
				<image src="/img/xibuyangguangjijinhui.png" style="width:544rpx; height:64rpx;" />
		</view>
		<view style="display:flex; justify-content:space-around; margin-top:60rpx;">
				<image src="/img/share2.png" bindtap="sharePoemStory" style="width:145rpx; height:60rpx;" />
				<image src="/img/cancel.png" bindtap="hidePoemStory" style="width:145rpx; height:60rpx;" />
		</view>
</view>
<view class="g-modal" wx:if="{{showBuyModal}}">
		<view class="g-modal-mask"></view>
		<view class="g-modal-content">
				<image class="g-modal-logo" src="/img/sunflower.png" />
				<view class="g-modal-info">该作品可获得300阳光值</view>
				<view class="g-modal-btn">
						<view bindtap="onConfirm" class="g-btn-40">确认</view>
						<view bindtap="onCancal" class="g-btn-40">返回</view>
				</view>
		</view>
</view>