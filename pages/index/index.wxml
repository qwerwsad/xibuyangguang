				<view style="width:200rpx; margin-left:30rpx; color:#606060; font-size:26rpx;">{{ rank.nickName || '--' }}</view>
				<view class="yangguangbox" style="margin-left:0rpx; color:#676767; font-size:24rpx;">捐赠 <image src="https://wosz.oss-cn-beijing.aliyuncs.com/poetrychildhood/yangguang.png"></image>{{ rank.givePoint }}</view>
