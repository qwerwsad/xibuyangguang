page {
    width: 100%;
    height: 100%;
    overflow-y: scroll;
}

.bg_black {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
}

view {
    line-height: 100%;
}

text {
    line-height: 100%;
}

::-webkit-scrollbar {
    display: none;
}

/* 隐藏滚动条 */

/* 申请授权弹窗 */
.drawer_box {
    width: 750rpx;
    height: 460rpx;
    overflow: hidden;
    position: fixed;
    bottom: 0;
    left: 0;
    padding: 40rpx;
    z-index: 1001;
    background: #ffffff;
}

.drawer_title {
    font-size: 28rpx;
    clear: both;
    border-top-left-radius: 10rpx;
}

.drawer_content {
    margin-top: 60rpx;
    font-size: 28rpx;
    color: #393939;
}

.btn_ok {
    margin-top: 60rpx;
    width: 670rpx;
    height: 88rpx;
    border: 2rpx solid #CC3333;
    color: #CC3333;
    background-color: #ffffff;
    font-size: 28rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 0;
}

.btn_cancel {
    text-align: center;
    color: #666666;
    background-color: #ffffff;
    border: none;
    margin-top: 40rpx;
    font-size: 28rpx;
}